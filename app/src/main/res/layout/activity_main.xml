<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/volume_textview"
        android:layout_width="@dimen/volume_textview_width"
        android:layout_height="@dimen/textview_height"
        android:text="@string/volume_textview_text"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/textview_height"
        android:text="@string/count_textview_initial_text"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@+id/volume_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="@string/plus_button_text"
        app:layout_constraintEnd_toStartOf="@+id/minus_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="@string/minus_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clock_textview"
        android:layout_width="@dimen/clock_textview_width"
        android:layout_height="@dimen/textview_height"
        android:textColor="#808080"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume_textview" />

    <EditText
        android:id="@+id/comment_edittext"
        android:layout_width="@dimen/comment_editview_width"
        android:layout_height="@dimen/editview_height"
        android:hint="@string/comment_edittext_hint"
        android:inputType="text"
        android:autofillHints=""
        app:layout_constraintStart_toEndOf="@+id/clock_textview"
        app:layout_constraintTop_toBottomOf="@+id/plus_button"
        tools:targetApi="26" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="@string/add_button_text"
        app:layout_constraintStart_toEndOf="@+id/comment_edittext"
        app:layout_constraintTop_toBottomOf="@+id/plus_button" />

    <ListView
        android:id="@+id/inventory_data_list_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_edittext" />

</androidx.constraintlayout.widget.ConstraintLayout>