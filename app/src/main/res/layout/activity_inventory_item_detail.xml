<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InventoryItemDetailActivity">

    <ImageButton
        android:id="@+id/detail_activity_photo_library_image_button"
        android:layout_width="@dimen/detail_activity_image_button_size"
        android:layout_height="@dimen/detail_activity_image_button_size"
        android:contentDescription="@string/detail_activity_photo_library_image_button_description"
        android:src="@drawable/photo_library"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/detail_activity_save_image_button"
        android:layout_width="@dimen/detail_activity_image_button_size"
        android:layout_height="@dimen/detail_activity_image_button_size"
        android:src="@drawable/save"
        android:contentDescription="@string/detail_activity_save_image_button_description"
        app:layout_constraintEnd_toStartOf="@id/detail_activity_delete_image_button"
        app:layout_constraintStart_toEndOf="@+id/detail_activity_photo_library_image_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/detail_activity_delete_image_button"
        android:layout_width="@dimen/detail_activity_image_button_size"
        android:layout_height="@dimen/detail_activity_image_button_size"
        android:src="@drawable/delete"
        android:contentDescription="@string/detail_activity_delete_image_button_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/detail_activity_selected_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/detail_activity_quantity_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_activity_save_image_button" />

    <TextView
        android:id="@+id/detail_activity_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_activity_text_size"
        app:layout_constraintBottom_toTopOf="@+id/detail_activity_comment_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/detail_activity_quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantity_text_view_text"
        android:textSize="@dimen/detail_activity_text_size"
        app:layout_constraintBottom_toTopOf="@+id/detail_activity_comment_text_view"
        app:layout_constraintEnd_toStartOf="@id/detail_activity_inventory_count_text_view" />

    <TextView
        android:id="@+id/detail_activity_inventory_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_activity_text_size"
        app:layout_constraintBottom_toTopOf="@+id/detail_activity_comment_text_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/detail_activity_comment_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detail_activity_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
